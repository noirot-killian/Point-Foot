<Page x:Class="Point_Foot.VoirJoueur"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Point_Foot"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VoirJoueur">

    <Grid>
        <DataGrid x:Name="dgVoirJoueur" HorizontalAlignment="Left" Height="394" Margin="36,30,0,0" VerticalAlignment="Top" Width="714" SelectionChanged="dgVoirJoueur_SelectionChanged" AutoGenerateColumns="false">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdProfil}"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Nom}"/>
                <DataGridTextColumn Header="Prénom" Binding="{Binding Prenom}"/>
                <DataGridTextColumn Header="Mail" Binding="{Binding Mail}"/>
                <DataGridTextColumn Header="Score" Binding="{Binding Score}"/>
                <DataGridTextColumn Header="Numéro Licence" Binding="{Binding NumLicence}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
